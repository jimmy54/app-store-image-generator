{
  "name": "app-store-image-generator",
  "version": "1.0.0",
  "description": "Automatical generation of localised app store images in Sketch with react-sketchapp",
  "author": "Kristin Baumann (http://www.kristin-baumann.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kristinbaumann/app-store-image-generator"
  },
  "main": "app-store-image-generator.sketchplugin",
  "manifest": "src/manifest.json",
  "scripts": {
    "build": "skpm build",
    "watch": "skpm build --watch",
    "render": "skpm build --watch --run",
    "render:once": "skpm build --run",
    "link-plugin": "skpm link",
    "serveImages": "cd data && serve . -p 5000"
  },
  "devDependencies": {
    "skpm": "^0.9.0"
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-sketchapp": "^0.11.0",
    "react-test-renderer": "^15.4.2",
    "serve": "^6.0.6"
  }
}